        <TextBox x:Name="Comp_Details" HorizontalAlignment="Left" Foreground="Blue" Margin="31,38,0,0" VerticalAlignment="Top" Width="240" FontWeight="Bold" FontSize="14" FontFamily="Arial Black" HorizontalContentAlignment="Center" Height="114" AcceptsReturn="True" CharacterCasing="Upper">

        </TextBox>
