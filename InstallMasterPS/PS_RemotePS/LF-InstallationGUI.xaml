		<Label x:Name="User_lbl" Foreground="Red" Content="U1187808" HorizontalAlignment="Left" Margin="139,1,0,0" VerticalAlignment="Top" Width="150" FontWeight="Bold" FontSize="16" FontFamily="Arial Black" HorizontalContentAlignment="Center"/>        
        <Label x:Name="CN_txt" BorderThickness="4" Foreground="Red" HorizontalAlignment="Left" Margin="31,152,0,0" VerticalAlignment="Top" Width="240" FontWeight="Bold" FontSize="16" FontFamily="Arial Black" HorizontalContentAlignment="Center" Visibility="Visible" IsEnabled="True" Height="35" />
    </Grid>
</Window>
